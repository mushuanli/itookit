{
  "name": "@mdxeditor/renderer",
  "version": "1.0.0",
  "description": "Extensible Markdown renderer with plugin system",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "markdown",
    "renderer",
    "plugin",
    "mathjax",
    "latex"
  ],
  "dependencies": {
    "marked": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@itookit/vfs-core": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@itookit/vfs-core": {
      "optional": true
    }
  }
}
