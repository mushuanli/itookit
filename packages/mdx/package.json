{
  "name": "@itookit/mdxeditor",
  "version": "0.4.1",
  "description": "A powerful, plugin-driven MDX editor component based on CodeMirror 6, designed for extensibility and rich content creation.",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./style.css": "./src/styles/index.css"
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/mdxeditor.umd.cjs",
    "module": "./dist/mdxeditor.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/mdxeditor.js",
        "require": "./dist/mdxeditor.umd.cjs"
      },
      "./style.css": "./dist/style.css"
    }
  },
  "files": [
    "dist",
    "styles"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "markdown",
    "renderer",
    "plugin",
    "mermaid",
    "mathjax",
    "latex",
    "mdx",
    "editor",
    "codemirror",
    "anki",
    "md-folder",
    "fold-codeblock",
    "autocomplete",
    "typescript"
  ],
  "author": "lizlok@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mushuanli/itookit.git",
    "directory": "packages/mdxeditor"
  },
  "bugs": {
    "url": "https://github.com/mushuanli/itookit/issues"
  },
  "homepage": "https://github.com/mushuanli/itookit/tree/main/packages/mdxeditor#readme",
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.8",
    "@itookit/common": "workspace:*",
    "@itookit/vfs": "workspace:*",
    "codemirror": "^6.0.2",
    "front-matter": "^4.0.2",
    "gray-matter": "^4.0.3",
    "marked": "^11.2.0",
    "mermaid": "^10.9.5",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "peerDependencies": {
    "@itookit/vfs": "workspace:*"
  },
  "devDependencies": {
    "@itookit/vfs": "workspace:*",
    "@types/node": "^20.19.25",
    "@types/turndown": "^5.0.6",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-dts": "^3.9.1"
  }
}
